<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Home">

        <ScrollView
            android:layout_width="match_parent"
            android:id="@+id/scroll_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Play &amp; Win"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/adjoe_click"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@drawable/splash_bg"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:textStyle="bold"
                            android:textSize="25sp"
                            android:textColor="@color/white"
                            android:text="Sains Spectacular Quiz Competition"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_marginTop="10sp"
                            android:textSize="10sp"
                            android:text="16 Question"
                            android:layout_height="wrap_content">
                        </TextView>

                        <Button
                            android:layout_width="wrap_content"
                            android:textStyle="normal"
                            android:backgroundTint="#B33D6AFF"
                            android:textColor="@color/white"
                            android:layout_marginTop="10sp"
                            android:textSize="20sp"
                            android:text="Play now"
                            android:layout_height="wrap_content">
                        </Button>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:background="#FF5444"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:textStyle="normal"
                                android:textSize="25sp"
                                android:textColor="@color/white"
                                android:text="Ancient World History"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="10sp"
                                android:textSize="10sp"
                                android:text="16 Question"
                                android:layout_height="wrap_content">
                            </TextView>

                            <Button
                                android:layout_width="wrap_content"
                                android:textStyle="normal"
                                android:backgroundTint="#B33D6AFF"
                                android:textColor="@color/white"
                                android:layout_marginTop="10sp"
                                android:textSize="20sp"
                                android:text="Play now"
                                android:layout_height="wrap_content">
                            </Button>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:background="#63A758"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:textStyle="normal"
                                android:textSize="25sp"
                                android:textColor="@color/white"
                                android:text="Natural &amp; Animal BC"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:layout_marginTop="10sp"
                                android:textSize="10sp"
                                android:text="16 Question"
                                android:layout_height="wrap_content">
                            </TextView>

                            <Button
                                android:layout_width="wrap_content"
                                android:textStyle="normal"
                                android:backgroundTint="#B33D6AFF"
                                android:textColor="@color/white"
                                android:layout_marginTop="10sp"
                                android:textSize="20sp"
                                android:text="Play now"
                                android:layout_height="wrap_content">
                            </Button>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Follow us"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:foregroundGravity="center"
                        android:padding="10dp"
                        android:background="#FEC672"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="50dp"
                            android:scaleType="fitCenter"
                            android:layout_weight="1"
                            android:src="@drawable/whatsapp"
                            android:layout_height="50dp">
                        </ImageView>

                        <ImageView
                            android:layout_width="50dp"
                            android:scaleType="fitCenter"
                            android:layout_weight="1"
                            android:src="@drawable/telegram"
                            android:layout_height="50dp">
                        </ImageView>

                        <ImageView
                            android:layout_width="50dp"
                            android:scaleType="fitCenter"
                            android:layout_weight="1"
                            android:src="@drawable/google"
                            android:layout_height="50dp">
                        </ImageView>

                        <ImageView
                            android:layout_width="50dp"
                            android:scaleType="fitCenter"
                            android:layout_weight="1"
                            android:src="@drawable/instagram"
                            android:layout_height="50dp">
                        </ImageView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Daily Bonus"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:background="#C45623"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:textStyle="bold"
                                android:textSize="25sp"
                                android:textColor="@color/white"
                                android:text="Claim Your Bonus"
                                android:layout_height="wrap_content">
                            </TextView>
                            <TextView
                                android:layout_width="match_parent"
                                android:textStyle="normal"
                                android:textColor="@color/white"
                                android:layout_marginTop="10sp"
                                android:textSize="15sp"
                                android:text="Come back every day for more rewards"
                                android:layout_height="wrap_content">
                            </TextView>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:layout_height="50dp"
                            android:src="@drawable/money"
                            >
                        </ImageView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Actions"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:background="#F9A04D"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:src="@drawable/subscribe"
                                    android:layout_height="100dp">
                                </ImageView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textStyle="normal"
                                    android:textSize="15sp"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:text="Pubscribe"
                                    android:layout_height="wrap_content">
                                </TextView>

                                <ImageButton
                                    android:layout_width="match_parent"
                                    android:textStyle="normal"
                                    android:background="#00000000"
                                    android:layout_gravity="center"
                                    android:src="@drawable/arrow_right"
                                    android:layout_height="wrap_content">
                                </ImageButton>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:background="#44B1FF"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:src="@drawable/giftbox"
                                    android:layout_height="100dp">
                                </ImageView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textStyle="normal"
                                    android:textSize="15sp"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:text="Lottably"
                                    android:layout_height="wrap_content">
                                </TextView>

                                <ImageButton
                                    android:layout_width="match_parent"
                                    android:textStyle="normal"
                                    android:background="#00000000"
                                    android:layout_gravity="center"
                                    android:src="@drawable/arrow_right"
                                    android:layout_height="wrap_content">
                                </ImageButton>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:background="#FB70F6"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:src="@drawable/twitter"
                                    android:layout_height="100dp">
                                </ImageView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textStyle="normal"
                                    android:textSize="15sp"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:text="Humix"
                                    android:layout_height="wrap_content">
                                </TextView>

                                <ImageButton
                                    android:layout_width="match_parent"
                                    android:textStyle="normal"
                                    android:background="#00000000"
                                    android:layout_gravity="center"
                                    android:src="@drawable/arrow_right"
                                    android:layout_height="wrap_content">
                                </ImageButton>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp"
                                android:background="#7FE671"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="100dp"
                                    android:src="@drawable/giftbox"
                                    android:layout_height="100dp">
                                </ImageView>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:textStyle="normal"
                                    android:textSize="15sp"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:text="Lottably"
                                    android:layout_height="wrap_content">
                                </TextView>

                                <ImageButton
                                    android:layout_width="match_parent"
                                    android:textStyle="normal"
                                    android:background="#00000000"
                                    android:layout_gravity="center"
                                    android:src="@drawable/arrow_right"
                                    android:layout_height="wrap_content">
                                </ImageButton>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>





            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>